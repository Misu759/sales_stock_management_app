<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @menu %>
      <%= form_with(model: @menu, class: "p-3 mb-3 rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control rounded", placeholder: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :regular_cost, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :regular_cost, class: "form-control rounded", placeholder: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.select :category, Menu.categories_i18n.invert.to_a, {}, { class: 'form-control rounded'}%>
          </div>
        </div>


        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
      <div class="mb-3 text-center">
        <%= link_to t('defaults.back'), menus_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>