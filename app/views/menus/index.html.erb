<h1 class="text-center mt-4 font-italic">Menu</h1>

<div class="container">
  <% @menus.each do |menu| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic font-weight-bold">
            <%= link_to menu.name, menu_path(menu), class: "text-success" %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= menu.regular_cost %></h5>
            <p class="card-text"><%= truncate(menu.description, length: 100) %></p>
            <%= link_to "詳細", menu_path(menu), class: "btn btn-outline-success" %>
            <%= link_to "編集", edit_menu_path(menu), class: "btn btn-outline-info" %>
            <%= link_to "削除", menu_path(menu), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="text-center">
    <%= link_to "メニュー情報を追加", new_menu_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
