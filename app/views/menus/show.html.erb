<h2 class="text-center mt-4"><%= @menu.name %></h2>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          <%= "定価 : #{@menu.regular_cost}円" %>
        </div>
        <div class="card-body">
          <div class="card-text text-left"><%= simple_format(@menu.description) %></div>
          <%= link_to "Edit", edit_menu_path(@menu), class: "btn btn-outline-info" %>
          <%= link_to "Delete", menu_path(@menu), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
        </div>
      </div>
      <div class="mb-3 text-center">
        <%= link_to '[ 戻る ]', menus_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>