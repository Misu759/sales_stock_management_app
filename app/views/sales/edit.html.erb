<h1 class="mt-4 mb-4 text-center"><%= t '.title' %></h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @sale %>
      <%= form_with(model: @sale, class: "p-3 mb-3  rounded", local: true) do |f| %>
        
      <div class="form-group row">
        <%= f.label :date, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.date_field :date, class: "form-control rounded", value: Date.today %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :menu, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.collection_select :menu_id, Menu.all, :id, :name, { prompt: t('defaults.prompt') }, class: "form-control rounded" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :quantity, class: "col-2 col-form-label" %>
        <div class="col-3">
          <%= f.number_field :quantity, class: "form-control rounded" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-dark btn-lg", data: {confirm: "在庫情報も更新されます．確認してください，"} %>
      </div>
      <% end %>
      <div class="mb-3 text-center">
        <%= link_to t('defaults.back'), sales_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>