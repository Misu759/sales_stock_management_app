<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @ingredient %>
      <%= form_with(model: @ingredient, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
        
      <div class="form-group row">
        <%= f.label :name, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :unit_amount, class: "col-2 col-form-label text-light" %>
        <div class="col-3">
          <%= f.number_field :unit_amount, class: "form-control shadow rounded", placeholder: "購入単位の量" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :purchase_cost, class: "col-2 col-form-label text-light" %>
        <div class="col-3">
          <%= f.number_field :purchase_cost, class: "form-control shadow rounded", placeholder: "値段" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :stock, class: "col-2 col-form-label text-light" %>
        <div class="col-3">
          <%= f.number_field :stock, class: "form-control shadow rounded" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :threshold, class: "col-2 col-form-label text-light" %>
        <div class="col-3">
          <%= f.number_field :threshold, class: "form-control shadow rounded" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :supplier, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.collection_select :supplier_id, Supplier.all, :id, :name, { prompt: t('defaults.prompt') }, class: "form-control shadow rounded" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>
      <% end %>
      <div class="mb-3 text-center">
        <%= link_to t('defaults.back'), ingredients_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>