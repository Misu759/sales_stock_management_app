<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @purchase %>
      <%= form_with(model: @purchase, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name, { prompt: '選択してください' }, class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :amount, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.number_field :amount, class: "form-control shadow rounded", placeholder: "発注量" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :purchase_date, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.date_field :purchase_date, class: "form-control shadow rounded", value: Date.today %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :waste_date, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.date_field :waste_date, class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :delivery_cost, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.number_field :delivery_cost, class: "form-control shadow rounded", placeholder: "配送費" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
      <div class="mb-3 text-center">
        <%= link_to '[ 戻る ]', purchases_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>