
<h2 class="text-center mt-4">
  <%= t '.title' %> : <%= @purchase.ingredient.name %>
</h2>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center mb-5 bg-white rounded">
        <div class="card-header font-italic">
          <%= "#{Purchase.human_attribute_name :purchase_date} : #{l @purchase.purchase_date, format: :long }" %>
        </div>
        <div class="card-body">
          <div class="card-text text-center">
            <p><%= "#{Purchase.human_attribute_name :amount} : #{@purchase.amount}" %></p>
            <p><%= "#{Ingredient.human_attribute_name :purchase_cost} : #{@purchase.decorate.purchase_cost}円" %></p>
            <p><%= "#{Purchase.human_attribute_name :waste_date} : #{@purchase.waste_date}" %></p>
            <p><%= "#{Purchase.human_attribute_name :unused_amount} : #{@purchase.unused_amount}" %></p>
            <p><%= "#{Purchase.human_attribute_name :arrival_date} : #{l @purchase.arrival_date, format: :short}" %></p>

            <p>担当者 :</p>
          </div>
          <%= link_to t('defaults.edit'), edit_purchase_path(@purchase), class: "btn btn-outline-info" %>
          <%= link_to t('defaults.delete'), purchase_path(@purchase), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
        </div>
      </div>
      <div class="mb-3 text-center">
        <p><%= link_to t('.new_path'), new_purchase_path, class: "text-info" %></p>
        <%= link_to t('defaults.back'), purchases_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>