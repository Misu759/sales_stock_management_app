<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @supplier %>
      <%= form_with(model: @supplier, class: "p-3 mb-3  rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :phone_number, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.number_field :phone_number, class: "form-control rounded", placeholder: true %>
          </div>
        </div>


        <div class="form-group row">
          <%= f.label :delivery_cost, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.number_field :delivery_cost, class: "form-control rounded", placeholder: true %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-dark btn-lg" %>
        </div>
      <% end %>
      <div class="mb-3 text-center">
        <%= link_to t('defaults.back'), suppliers_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>