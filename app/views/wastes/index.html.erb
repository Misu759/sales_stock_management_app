<h1 class="mt-4 mb-4">廃棄食材情報一覧</h1>

<div class="text-center col-9 mb-4">
  <%= link_to '廃棄情報追加', new_waste_path, class: "btn btn-lg btn-outline-secondary" %>
</div>

<div class="row">
  <div class="col-9"> 
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">食材名</th>
          <th scope="col">廃棄量</th>
          <th scope="col">日付</th>
          <th scope="col"> </th>
        </tr>
      </thead>
      <tbody>
        <% @wastes.each do |waste| %>
          <tr>
            <th scope="row"><%= waste.ingredient.name %></th>
            <td><%= waste.amount %></td>
            <td><%= waste.date %></td>
            <td>
              <%= link_to '編集', edit_waste_path(waste), class: "btn btn-sm btn-outline-success" %>
              <%= link_to '削除', waste_path(waste), class: "btn btn-sm btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>