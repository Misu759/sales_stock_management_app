<h1 class="mt-4 mb-4">在庫詳細</h1>

<div class="row">
  <div class="col-9">  
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">食材名</th>
          <th scope="col">繰り越し在庫量</th>
          <th scope="col">営業日在庫量</th>
          <th scope="col"> </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"><%= @stock.ingredient.name %></th>
          <td><%= @stock.amount %></td>
          <td><%= @stock.amount %></td>
          <td><%= link_to '編集', edit_stock_path(@stock), class: "btn btn-sm btn-outline-success" %></td>
          <td><%= link_to '削除', stock_path(@stock), class: "btn btn-sm btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>