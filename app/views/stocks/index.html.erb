<h1 class="mt-4 mb-4"><%= t '.title' %></h1>

<div class="mt-4 mb-4">
  <%= render 'search_form'%>
</div>

<div class="row">
  <div class="col-9">  
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col"><%= Stock.human_attribute_name :ingredient_name %></th>
          <th scope="col"><%= Stock.human_attribute_name :carrying_stock %></th>
          <th scope="col"><%= Stock.human_attribute_name :working_stock %></th>
          <th scope="col"> </th>
        </tr>
      </thead>
      <tbody>
        <% @stocks.each do |stock| %>
          <tr>
            <th scope="row"><%= stock.ingredient.name %></th>
            <!-- TODO(繰り越し在庫量，営業日在庫量の計算) -->
            <td><%= stock.amount %></td>
            <td><%= stock.amount %></td>
            <td><%= link_to t('defaults.show'), stock_path(stock), class: "btn btn-sm btn-outline-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="text-center col-9 mt-4">
  <%= link_to t('.waste_path'), wastes_path, class: "btn btn-lg btn-outline-secondary" %>
</div>