<h1 class="mt-4 mb-4 text-center">材料の登録（<%= @menu.name %> ）</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @form %>
      <%= form_with(model: @form, url: menu_ingredients_url(ingredient_number: @ingredient_number), method: :post, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>

        <table class="table">
          <thead>
            <tr>
              <th scope="col">食材名</th>
              <th scope="col">一品当たりの分量</th>
            </tr>
          </thead>

          <%= form.fields_for :menu_ingredients do |f| %>
          <tbody>
            <tr>
              <td>
                <div class="form-group row">
                  <div class="col-10">
                    <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name, class: "form-control rounded" %>
                  </div>
                </div>
              </td>

              <td>
                <div class="form-group row">
                  <div class="col-5">
                    <%= f.number_field :amount, class: "form-control rounded" %>
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-outline-light btn-lg", data: {confirm: "登録します"} %>
        </div>
      <% end %>

      <div class="mb-3 text-center">
        <%= link_to t('defaults.back'), sales_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>