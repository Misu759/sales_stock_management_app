<h1 class="mt-4 mb-4 text-center">材料の編集（<%= @menu_ingredient.menu.name %> ）</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @menu_ingredient %>
      <%= form_with(model: @menu_ingredient, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :amount, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.number_field :amount, class: "form-control shadow rounded", placeholder: true %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>

      <div class="mb-3 text-center">
        <%= link_to t('defaults.back'), sales_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>