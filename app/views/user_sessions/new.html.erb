<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label t '.mail' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label t '.password' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit t('.login_btn'), class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to t('.signup_path'), new_user_path, class: "text-info" %>
        <a href="#">パスワードをお忘れの方はこちら(未実装)</a>
      </div>
    </div>
  </div>
</div>