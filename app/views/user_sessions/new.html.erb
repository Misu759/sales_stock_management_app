<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center login-title mt-4"><%= t '.title' %></h1>
      <div class="account-wall mx-auto col-sm-6">
        <!-- <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
            alt=""> -->
        <%= form_with url: login_path, class: 'form-signin', local: true do |f| %>
          <div class="form-group">
            <%= f.label t '.mail' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label t '.password' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit t('.login_btn'), class: 'btn btn-lg btn-primary btn-block' %>
          </div>
        <% end %>
        <div class="text-center">
          <label class="checkbox pull-left">
            <input type="checkbox" value="remember-me">
            Remember me
          </label>
          <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>  
          <p>
            <%= link_to t('.signup_path'), new_user_path, class: "text-info" %>
          </p>
          <p><a href="#">パスワードをお忘れの方はこちら(未実装)</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
